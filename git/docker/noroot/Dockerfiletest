FROM centos:7
# 下载 gosu
# https://www.cntofu.com/book/139/image/dockerfile/user.md
RUN curl -o /usr/local/bin/gosu "https://github.com/tianon/gosu/releases/download/1.7/gosu-amd64" \
    && chmod +x /usr/local/bin/gosu \
        && gosu nobody true
# 设置 CMD，并以另外的用户执行
CMD [ "exec", "gosu", "echo", "redis-server" ]
